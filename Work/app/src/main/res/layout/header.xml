<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="view" type="usausa.github.io.work.view.AppViewBase"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/metroTeal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_user_id"
            android:textColor="@color/white"
            android:visibility="@{view.userIdEnable}"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@{view.userId}"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:visibility="@{view.userIdEnable}"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_terminal_no"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@{view.terminalNo}"
            android:textColor="@color/white"
            android:textAlignment="textEnd"/>

    </LinearLayout>

</layout>
